<div class="wrapper">

<div class="header">
  <h1>THE BURGER STAND</h1>
  <img src="https://cdn.pixabay.com/photo/2018/05/29/00/17/burger-3437618__340.png" width="100" height="100">

</div>

<div class="burgerWrapper">

<div class="left burgerCol">

  <h2>Burgers ready to eat:</h2>
  
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>

</div>

<div class="center burgerCol">

  <h2>Enter a burger you want to eat</h2>
  
    <form class="create-form">
  
      <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
        <button type="submit">Add Burger</button>
      </div>
      
    </form> 
   
  </div>


<div class="right burgerCol">

  <h2>Burgers you ate:</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>

</div>
</div>



{{!-- Wrapper End  --}}
</div>








