
<div class="wrapper">

<div><h1>Eat the burger!</h1></div>

<div class="left">

  <h2>Burgers ready to eat:</h2>
  
  <ul>
    {{#each burgers}}
    <li>
      <p>
        {{this.burger_name}}
        <button data-id="{{this.id}}" class="devour">Devour It</button>
      </p>
    </li>
  
    {{/each}}
  </ul>

</div>

<div class="center">

  <h2>Enter a burger you want to eat</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="id">Burger Name:</label>
      <input type="text" id="id" name="burger_name">
      <button type="submit">Add it!</button>
    </div>
  
  </form>

</div>

<div class="right">

  <h2>Burgers you ate:</h2>
  <ul>
  {{#each burgers}}
 
  {{/each}}
</ul>

</div>


{{!-- Wrapper End  --}}
</div>








