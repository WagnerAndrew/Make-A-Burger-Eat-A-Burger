
<div class="wrapper">

<div><h1>Eat the burger!</h1></div>

<div class="left">

  <h2>Burgers ready to eat:</h2>
  
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>

</div>

<div class="center">

  <h2>Enter a burger you want to eat</h2>

    <form class="create-form">

      <div class="form-group">
        <label for="burgerName">Burger Name:</label>
        <input type="text" id="burgerName" name="name">
      </div>

      <div class="form-group">
        <label for="devour">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devour!<br>
        <input type="radio" name="devoured" value="0"> Barf
      </div>

      <button type="submit">Add Burger</button>
    </form>

</div>

<div class="right">

  <h2>Burgers you ate:</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>

</div>


{{!-- Wrapper End  --}}
</div>








